<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="363dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Menjumlahkan 2 buah Bilangan"/>
    <TextView
        android:id="@+id/j1"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/textview"
        android:layout_marginTop="20dp"
        android:text="Masukan bilangan pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"></TextView>
    <EditText
        android:id="@+id/txt1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/j1"></EditText>

    <TextView
        android:id="@+id/j2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/txt1"
        android:layout_marginTop="20dp"
        android:text="Masukan bilangan kedua"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"></TextView>
    <EditText
        android:id="@+id/txt2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/j2"></EditText>
    <Button
        android:id="@+id/btnHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HITUNG BILANGAN"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></Button>
    <TextView
        android:id="@+id/j3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HASIL PENJUMLAHAN"
        android:textSize="20dp"
        android:layout_below="@id/btnHasil"
        android:layout_centerHorizontal="true"></TextView>
    <EditText
        android:id="@+id/jumlah"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/j3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"></EditText>



</RelativeLayout>